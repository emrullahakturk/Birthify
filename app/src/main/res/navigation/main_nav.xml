<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/firstPageFragment">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.yargisoft.birthify.view.RegisterFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/registerToLogin"
            app:destination="@id/loginPageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/registerToFirst"
            app:destination="@id/firstPageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/registerToForgot"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/loginPageFragment"
        android:name="com.yargisoft.birthify.view.LoginPageFragment"
        android:label="fragment_login_page"
        tools:layout="@layout/fragment_login_page" >
        <action
            android:id="@+id/loginToRegister"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/loginToFirst"
            app:destination="@id/firstPageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/loginToForgot"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/loginToMain"
            app:destination="@id/mainPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/firstPageFragment"
        android:name="com.yargisoft.birthify.view.FirstPageFragment"
        android:label="fragment_main_page"
        tools:layout="@layout/fragment_first_page" >
        <action
            android:id="@+id/firstToLogin"
            app:destination="@id/loginPageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/firstToRegister"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.yargisoft.birthify.view.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" >
        <action
            android:id="@+id/forgotToLogin"
            app:destination="@id/loginPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBirthdayFragment"
        android:name="com.yargisoft.birthify.view.AddBirthdayFragment"
        android:label="AddBirthdayFragment" />
    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.yargisoft.birthify.view.MainPageFragment"
        android:label="MainPageFragment" >
        <action
            android:id="@+id/mainToAddBirthday"
            app:destination="@id/addBirthdayFragment" />
    </fragment>
</navigation>