<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_login</item>
        <item name="colorPrimaryDark">@color/green_login</item>
        <item name="colorAccent">@color/green_login</item>
    </style>

    <!-- Custom style for NavigationView items -->
    <style name="CustomNavigationViewTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/wittgenstein_font</item>
    </style>

    <!-- PopupMenu stili -->
    <style name="CustomPopupMenu" parent="Theme.AppCompat.Light">
        <item name="popupMenuStyle">@style/Widget.CustomPopupMenu</item>
    </style>

    <style name="Widget.CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/pop_up_menu_background</item>
    </style>



    <style name="MenuIconStyle" parent="Widget.AppCompat.ActionButton">
        <!-- VarsayÄ±lan ikon rengi; gerekirse override edilebilir -->
        <item name="android:iconTint">@color/black</item>
    </style>



